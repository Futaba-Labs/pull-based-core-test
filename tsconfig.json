{
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", ""],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "lib",
    "baseUrl": "lib",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "lib/dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
